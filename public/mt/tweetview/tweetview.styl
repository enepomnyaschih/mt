@import 'mt/imports'

.mt-tweet
	background white
	border-top mt-grid-border
	font-size 14px
	padding 12px
	
	&:hover
		background #f5f5f5
	
	&-avatar
		background transparent none no-repeat 0 0
		border-radius 5px
		float left
		margin-right 10px
		size 48px 48px
	
	&-content
		float left
		width 438px
	
	&-full-name
		@extends .mt-bold
		float left
		margin-right 4px
	
	&-short-name
		@extends .mt-light
		float left
	
	&-time
		@extends .mt-light
		float right
	
	&-text
		padding 5px 0
	
	&-buttons
		text-align right
	
	&-button
		color #0084B4
		cursor pointer
		display inline-block
	
	&-like
	&-retweet
		margin-right 10px
	
	&-like.active
		color #FF9B00
	
	&-retweet.active
		color #609928
